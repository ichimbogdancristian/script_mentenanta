{
  "_comment": "v4.0 - OS-Specific system optimization configuration",
  "common": {
    "startupPrograms": {
      "safeToDisablePatterns": [
        "*Updater*",
        "*Update*Helper*",
        "*AutoUpdate*",
        "*UpdateChecker*",
        "*Adobe*Updater*",
        "*Google*Update*",
        "*Java*Update*"
      ],
      "neverDisable": [
        "*Security*",
        "*Antivirus*",
        "*Defender*",
        "*Firewall*",
        "*VPN*",
        "*Authentication*"
      ]
    },
    "services": {
      "safeToDisable": [
        "DiagTrack",
        "dmwappushservice",
        "RetailDemo",
        "XblAuthManager",
        "XblGameSave",
        "XboxGipSvc",
        "XboxNetApiSvc"
      ]
    },
    "visualEffects": {
      "performance": {
        "animations": false,
        "shadows": false,
        "transparency": false,
        "smoothEdges": false,
        "showWindowContents": true
      }
    },
    "powerPlan": {
      "defaultPlan": "High Performance"
    }
  },
  "windows10": {
    "services": {
      "safeToDisable": [
        "WMPNetworkSvc"
      ]
    },
    "registryTweaks": {
      "classicContextMenu": false,
      "showFileExtensions": true
    }
  },
  "windows11": {
    "services": {
      "safeToDisable": [
        "WidgetService",
        "ChatService",
        "DevHomeService"
      ]
    },
    "registryTweaks": {
      "classicContextMenu": true,
      "showFileExtensions": true,
      "disableSnapLayouts": false,
      "centerTaskbar": false,
      "disableWidgets": true,
      "disableChat": true
    },
    "uiOptimizations": {
      "useClassicTaskbar": false,
      "disableRecommendations": true,
      "minimizeSearchBox": true
    }
  }
}
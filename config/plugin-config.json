{
  "pluginSystem": {
    "enabled": true,
    "autoDiscovery": true,
    "autoLoadOnStartup": true,
    "allowHotReloading": true,
    "sandboxingEnabled": true,
    "maxPluginsPerCategory": 10,
    "pluginLoadTimeout": 30000
  },
  "pluginPaths": {
    "systemPlugins": "modules\\plugins\\system",
    "userPlugins": "modules\\plugins\\user",
    "thirdPartyPlugins": "modules\\plugins\\external",
    "pluginCache": "temp_files\\plugins\\cache",
    "pluginLogs": "temp_files\\plugins\\logs",
    "pluginData": "temp_files\\plugins\\data"
  },
  "security": {
    "requireDigitalSignature": false,
    "allowedPublishers": [],
    "blockedPlugins": [],
    "maxExecutionTime": 300000,
    "allowNetworkAccess": true,
    "allowRegistryAccess": false,
    "allowFileSystemAccess": "restricted",
    "enableCodeAnalysis": true,
    "quarantineUntrusted": true
  },
  "validation": {
    "strictMode": false,
    "validateDependencies": true,
    "checkCompatibility": true,
    "requireManifest": true,
    "enforceVersioning": true,
    "maxPluginSize": 10485760,
    "allowedFileTypes": [
      ".psm1",
      ".ps1",
      ".json",
      ".xml",
      ".txt",
      ".md"
    ]
  },
  "apiContracts": {
    "minimumApiVersion": "3.0.0",
    "supportedInterfaces": [
      "IMaintenancePlugin",
      "IInventoryPlugin",
      "IReportPlugin",
      "ISystemPlugin",
      "ISecurityPlugin"
    ],
    "requiredMethods": {
      "IMaintenancePlugin": [
        "Initialize-Plugin",
        "Invoke-MaintenanceAction",
        "Get-PluginInfo",
        "Test-PluginHealth"
      ],
      "IInventoryPlugin": [
        "Initialize-Plugin",
        "Get-InventoryData",
        "Get-PluginInfo"
      ],
      "IReportPlugin": [
        "Initialize-Plugin",
        "New-Report",
        "Export-ReportData",
        "Get-PluginInfo"
      ]
    }
  },
  "lifecycle": {
    "initializationOrder": [
      "system",
      "security",
      "inventory",
      "maintenance",
      "reporting",
      "user"
    ],
    "shutdownGracePeriod": 10000,
    "enableHealthMonitoring": true,
    "healthCheckInterval": 60000,
    "automaticRestartOnFailure": true,
    "maxRestartAttempts": 3
  },
  "dependencyManagement": {
    "allowCircularDependencies": false,
    "resolveConflicts": "priority",
    "conflictResolutionOrder": [
      "system",
      "user",
      "thirdparty"
    ],
    "enableVersionConflictDetection": true,
    "autoInstallDependencies": false
  },
  "configuration": {
    "allowPluginConfigs": true,
    "configIsolation": true,
    "encryptSensitiveData": true,
    "configBackupEnabled": true,
    "validateConfigSchema": true,
    "maxConfigSize": 1048576
  },
  "logging": {
    "enablePluginLogging": true,
    "logLevel": "Information",
    "separateLogFiles": true,
    "logRotation": true,
    "maxLogSize": 10485760,
    "retainLogDays": 30,
    "logPerformanceMetrics": true
  },
  "versioning": {
    "scheme": "semantic",
    "enforceBackwardCompatibility": true,
    "allowBetaVersions": false,
    "allowPreviewVersions": false,
    "autoUpdateEnabled": false,
    "updateCheckInterval": 86400000
  },
  "sandboxing": {
    "restrictedMode": false,
    "allowedModules": [
      "Microsoft.PowerShell.Management",
      "Microsoft.PowerShell.Utility",
      "Microsoft.PowerShell.Security"
    ],
    "blockedCmdlets": [
      "Invoke-Expression",
      "Invoke-Command",
      "Start-Process",
      "New-Object System.Net.WebClient"
    ],
    "allowedPaths": [
      "temp_files\\plugins"
    ],
    "memoryLimit": 104857600,
    "executionTimeLimit": 300000
  },
  "performance": {
    "enableCaching": true,
    "cacheExpiration": 3600000,
    "enableParallelLoading": true,
    "maxConcurrentPlugins": 5,
    "enableLazyLoading": true,
    "preloadCriticalPlugins": true,
    "monitorMemoryUsage": true,
    "garbageCollectionThreshold": 209715200
  },
  "ui": {
    "showPluginMenu": true,
    "enablePluginManagement": true,
    "showPluginStatus": true,
    "allowUserInstallation": true,
    "displayPluginMetrics": true,
    "enablePluginDebugging": false
  },
  "notifications": {
    "notifyPluginLoad": true,
    "notifyPluginFailures": true,
    "notifyPluginUpdates": true,
    "notifySecurityEvents": true,
    "notificationLevel": "Important",
    "enableEmailNotifications": false,
    "enableEventLogEntries": true
  },
  "compatibility": {
    "minimumPowerShellVersion": "7.0.0",
    "supportedOperatingSystems": [
      "Windows 10",
      "Windows 11",
      "Windows Server 2019",
      "Windows Server 2022"
    ],
    "requiredFeatures": [
      "PowerShellGet",
      "PSReadLine"
    ],
    "deprecatedApiSupport": true,
    "legacyPluginSupport": false
  },
  "examples": {
    "samplePlugins": [
      {
        "name": "SystemInfoPlugin",
        "type": "IInventoryPlugin",
        "description": "Collects extended system information",
        "version": "1.0.0",
        "author": "Windows Maintenance Team"
      },
      {
        "name": "CustomCleanupPlugin",
        "type": "IMaintenancePlugin", 
        "description": "Performs custom cleanup operations",
        "version": "1.2.1",
        "author": "Third Party Developer"
      },
      {
        "name": "AdvancedReportPlugin",
        "type": "IReportPlugin",
        "description": "Generates advanced analytics reports",
        "version": "2.0.0",
        "author": "Reporting Solutions Inc"
      }
    ]
  }
}
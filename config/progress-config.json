{
  "$schema": "progress-config-schema.json",
  
  "progressMonitoring": {
    "enabled": true,
    "globalProgress": {
      "enabled": true,
      "showOverallProgress": true,
      "showCurrentTask": true,
      "showEstimatedTimeRemaining": true,
      "showElapsedTime": true,
      "updateIntervalMilliseconds": 500,
      "refreshOnlyWhenChanged": true
    },
    "detailedProgress": {
      "enabled": true,
      "showSubOperations": true,
      "showItemsProcessed": true,
      "showProcessingRate": true,
      "showMemoryUsage": false,
      "showCPUUsage": false,
      "maxSubOperationHistory": 10
    },
    "progressBar": {
      "enabled": true,
      "style": "modern",
      "width": 50,
      "showPercentage": true,
      "showProgressText": true,
      "useUnicodeCharacters": true,
      "animateProgressBar": true,
      "animationSpeed": 200,
      "colors": {
        "completed": "Green",
        "inProgress": "Yellow",
        "pending": "Gray",
        "error": "Red",
        "warning": "DarkYellow"
      }
    },
    "statusDisplay": {
      "enabled": true,
      "showStatusIcons": true,
      "showTimestamps": true,
      "showOperationDetails": true,
      "maxStatusLines": 5,
      "clearScreenBetweenUpdates": false,
      "useFullScreenMode": false,
      "statusIcons": {
        "starting": "üîÑ",
        "inProgress": "‚ö°",
        "completed": "‚úÖ",
        "failed": "‚ùå",
        "warning": "‚ö†Ô∏è",
        "skipped": "‚è≠Ô∏è",
        "cancelled": "üõë"
      }
    }
  },
  
  "etaCalculation": {
    "enabled": true,
    "calculationMethod": "adaptive",
    "minimumSamplesForETA": 3,
    "maxHistoryWindowSeconds": 300,
    "smoothingFactor": 0.7,
    "recalculationInterval": 2,
    "showConfidenceLevel": false,
    "methods": {
      "linear": {
        "description": "Simple linear extrapolation",
        "enabled": true,
        "weight": 0.3
      },
      "exponential": {
        "description": "Exponential smoothing",
        "enabled": true,
        "weight": 0.4,
        "alpha": 0.3
      },
      "adaptive": {
        "description": "Adaptive algorithm based on operation patterns",
        "enabled": true,
        "weight": 0.3,
        "learningRate": 0.1
      }
    },
    "fallback": {
      "useAverageWhenUncertain": true,
      "showRangeInsteadOfExact": true,
      "uncertaintyThreshold": 0.5
    }
  },
  
  "operationTracking": {
    "enabled": true,
    "trackIndividualOperations": true,
    "trackSubOperations": true,
    "trackResourceUsage": true,
    "operationCategories": {
      "inventory": {
        "description": "System inventory and scanning operations",
        "estimatedDurationSeconds": 30,
        "variabilityFactor": 0.4,
        "trackItems": true,
        "trackFiles": false
      },
      "removal": {
        "description": "Application and component removal operations",
        "estimatedDurationSeconds": 120,
        "variabilityFactor": 0.6,
        "trackItems": true,
        "trackFiles": true
      },
      "installation": {
        "description": "Software installation and configuration",
        "estimatedDurationSeconds": 180,
        "variabilityFactor": 0.8,
        "trackItems": true,
        "trackFiles": false
      },
      "optimization": {
        "description": "System optimization and tuning operations",
        "estimatedDurationSeconds": 60,
        "variabilityFactor": 0.3,
        "trackItems": true,
        "trackFiles": true
      },
      "updates": {
        "description": "Windows Update operations",
        "estimatedDurationSeconds": 300,
        "variabilityFactor": 1.2,
        "trackItems": true,
        "trackFiles": false
      },
      "reporting": {
        "description": "Report generation and data analysis",
        "estimatedDurationSeconds": 15,
        "variabilityFactor": 0.2,
        "trackItems": false,
        "trackFiles": true
      }
    },
    "performanceMetrics": {
      "enabled": true,
      "trackProcessingRate": true,
      "trackMemoryUsage": true,
      "trackCPUUsage": false,
      "trackDiskIO": false,
      "sampleIntervalSeconds": 5
    }
  },
  
  "userInteraction": {
    "enabled": true,
    "allowCancellation": true,
    "allowPause": true,
    "allowSkip": false,
    "showCancellationPrompt": true,
    "cancellationKeys": ["Escape", "Ctrl+C"],
    "pauseKeys": ["Space", "P"],
    "skipKeys": ["S"],
    "confirmCancellation": true,
    "gracefulCancellation": {
      "enabled": true,
      "allowCurrentOperationToComplete": true,
      "timeoutSeconds": 30,
      "forceTerminateAfterTimeout": false
    },
    "pauseFunctionality": {
      "enabled": true,
      "showPauseInstructions": true,
      "maxPauseDurationMinutes": 10,
      "resumeAutomaticallyAfterTimeout": true
    }
  },
  
  "notifications": {
    "enabled": true,
    "notificationTypes": {
      "operationStarted": {
        "enabled": true,
        "showToast": false,
        "playSound": false,
        "logToFile": true
      },
      "operationCompleted": {
        "enabled": true,
        "showToast": true,
        "playSound": false,
        "logToFile": true
      },
      "operationFailed": {
        "enabled": true,
        "showToast": true,
        "playSound": true,
        "logToFile": true
      },
      "milestoneReached": {
        "enabled": true,
        "showToast": false,
        "playSound": false,
        "logToFile": true,
        "milestonePercentages": [25, 50, 75, 90]
      },
      "longRunningOperation": {
        "enabled": true,
        "showToast": true,
        "playSound": false,
        "logToFile": true,
        "thresholdMinutes": 5
      }
    },
    "toastNotifications": {
      "enabled": false,
      "duration": 5,
      "position": "BottomRight",
      "includeProgressBar": true
    },
    "soundNotifications": {
      "enabled": false,
      "volume": 50,
      "sounds": {
        "success": "SystemNotification",
        "error": "SystemHand",
        "warning": "SystemExclamation"
      }
    }
  },
  
  "logging": {
    "enabled": true,
    "logProgressEvents": true,
    "logPerformanceMetrics": true,
    "logUserInteractions": true,
    "progressLogLevel": "INFO",
    "logToSeparateFile": true,
    "progressLogFile": "temp_files/progress/progress.log",
    "detailedLogging": {
      "enabled": false,
      "logOperationDetails": false,
      "logETACalculations": false,
      "logResourceUsage": false,
      "logUserInputs": false
    },
    "logRetention": {
      "enabled": true,
      "retentionDays": 30,
      "maxLogSizeMB": 50,
      "compressOldLogs": true
    }
  },
  
  "reporting": {
    "enabled": true,
    "generateProgressReports": true,
    "reportFormats": {
      "json": {
        "enabled": true,
        "includeDetailedMetrics": true,
        "includeTimeline": true,
        "prettyFormat": false
      },
      "html": {
        "enabled": false,
        "includeCharts": false,
        "includeInteractiveElements": false
      },
      "csv": {
        "enabled": false,
        "includeHeaders": true,
        "delimiter": ","
      }
    },
    "progressSnapshots": {
      "enabled": true,
      "snapshotIntervalSeconds": 60,
      "maxSnapshots": 100,
      "includeSystemMetrics": true
    },
    "sessionSummary": {
      "enabled": true,
      "includeOverallStats": true,
      "includeOperationBreakdown": true,
      "includePerformanceMetrics": true,
      "includeErrorSummary": true,
      "generateAfterCompletion": true,
      "generateAfterCancellation": true
    }
  },
  
  "performance": {
    "enabled": true,
    "optimizeForSpeed": false,
    "optimizeForMemory": true,
    "progressUpdateOptimization": {
      "enabled": true,
      "skipRedundantUpdates": true,
      "batchUpdates": true,
      "batchSize": 5,
      "maxUpdateFrequency": 10
    },
    "memoryManagement": {
      "enabled": true,
      "clearProgressHistoryWhenLarge": true,
      "maxHistoryItems": 1000,
      "garbageCollectAfterOperations": false
    },
    "displayOptimization": {
      "enabled": true,
      "useDoubleBuffering": false,
      "minimizeScreenUpdates": true,
      "updateOnlyChangedElements": true
    }
  },
  
  "accessibility": {
    "enabled": true,
    "highContrast": {
      "enabled": false,
      "useSystemSettings": true,
      "customColors": {
        "progress": "White",
        "background": "Black",
        "text": "White",
        "success": "Green",
        "error": "Red"
      }
    },
    "screenReader": {
      "enabled": false,
      "announceProgressUpdates": true,
      "announceCompletions": true,
      "announceErrors": true,
      "updateFrequency": "milestone"
    },
    "visualImpairment": {
      "enabled": false,
      "largerText": true,
      "highContrastColors": true,
      "reduceAnimations": true,
      "simplifiedDisplay": true
    }
  },
  
  "debugging": {
    "enabled": false,
    "debugMode": false,
    "verboseProgress": false,
    "logAllUpdates": false,
    "showInternalTimers": false,
    "showMemoryUsage": false,
    "pauseOnErrors": false,
    "debugOutput": {
      "enabled": false,
      "outputToConsole": true,
      "outputToFile": false,
      "debugLogFile": "temp_files/progress/debug.log"
    }
  }
}
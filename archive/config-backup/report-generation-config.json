{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Report Generation Configuration",
  "description": "Configuration for Windows Maintenance Automation HTML Report Generation",
  "version": "3.0.0",
  
  "branding": {
    "title": "Windows Maintenance Automation Report",
    "subtitle": "System Analysis & Optimization Dashboard",
    "company": "Enterprise Windows Management",
    "logo": {
      "enabled": true,
      "path": "",
      "width": "64px",
      "height": "64px"
    },
    "footer": {
      "text": "Generated by Windows Maintenance Automation v3.0",
      "includeTimestamp": true,
      "includeSystemInfo": true
    }
  },
  
  "theme": {
    "name": "Microsoft Fluent",
    "colors": {
      "primary": "#0078d4",
      "primaryDark": "#106ebe",
      "secondary": "#6b69d6",
      "success": "#107c10",
      "warning": "#ffb900",
      "error": "#d13438",
      "critical": "#a80000",
      "info": "#0078d4",
      "background": "#faf9f8",
      "surface": "#ffffff",
      "text": "#323130",
      "textSecondary": "#605e5c",
      "border": "#e1dfdd",
      "shadow": "rgba(0, 0, 0, 0.1)",
      "accent": "#8764b8"
    },
    "gradients": {
      "primary": "linear-gradient(135deg, var(--primary-color), var(--primary-dark))",
      "success": "linear-gradient(135deg, var(--success-color), #0b5f0b)",
      "warning": "linear-gradient(135deg, var(--warning-color), #cc9400)",
      "error": "linear-gradient(135deg, var(--error-color), #a42933)"
    },
    "typography": {
      "fontFamily": "'Segoe UI', -apple-system, BlinkMacSystemFont, 'Roboto', 'Helvetica Neue', sans-serif",
      "fontSize": {
        "base": "14px",
        "small": "12px",
        "large": "16px",
        "title": "2.8em",
        "subtitle": "1.6em",
        "heading": "1.4em"
      },
      "fontWeights": {
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      }
    },
    "spacing": {
      "small": "8px",
      "medium": "16px",
      "large": "24px",
      "xlarge": "32px"
    },
    "borderRadius": {
      "small": "4px",
      "medium": "8px",
      "large": "12px"
    },
    "shadows": {
      "card": "0 2px 8px rgba(0, 0, 0, 0.1)",
      "elevated": "0 4px 16px rgba(0, 0, 0, 0.15)",
      "deep": "0 8px 32px rgba(0, 0, 0, 0.2)"
    }
  },
  
  "layout": {
    "maxWidth": "1400px",
    "containerPadding": "20px",
    "gridGap": "24px",
    "cardPadding": "20px",
    "sectionSpacing": "32px",
    "responsive": {
      "enabled": true,
      "breakpoints": {
        "mobile": "768px",
        "tablet": "1024px",
        "desktop": "1200px"
      }
    }
  },
  
  "sections": {
    "order": [
      "summary",
      "systemInfo",
      "moduleResults",
      "charts",
      "recommendations",
      "logs",
      "appendix"
    ],
    "summary": {
      "enabled": true,
      "title": "Executive Summary",
      "includeKPIs": true,
      "includeHealthScore": true,
      "includeTopIssues": true,
      "maxTopIssues": 5
    },
    "systemInfo": {
      "enabled": true,
      "title": "System Information",
      "includeHardware": true,
      "includeOS": true,
      "includePerformance": true,
      "includeSecurity": true
    },
    "moduleResults": {
      "enabled": true,
      "title": "Module Results",
      "expandable": true,
      "showExecutionTime": true,
      "showItemCounts": true,
      "modules": {
        "BloatwareRemoval": {
          "enabled": true,
          "displayName": "Bloatware Analysis & Removal",
          "icon": "üóëÔ∏è",
          "description": "Detected and removed unnecessary software",
          "showDetails": true
        },
        "EssentialApps": {
          "enabled": true,
          "displayName": "Essential Applications",
          "icon": "üì¶",
          "description": "Installed and updated essential software",
          "showDetails": true
        },
        "SystemOptimization": {
          "enabled": true,
          "displayName": "System Optimization",
          "icon": "‚ö°",
          "description": "Performance and storage optimization",
          "showDetails": true
        },
        "TelemetryDisable": {
          "enabled": true,
          "displayName": "Privacy & Telemetry",
          "icon": "üîí",
          "description": "Disabled telemetry and enhanced privacy",
          "showDetails": true
        },
        "WindowsUpdates": {
          "enabled": true,
          "displayName": "Windows Updates",
          "icon": "üîÑ",
          "description": "System updates and patch management",
          "showDetails": true
        }
      }
    },
    "charts": {
      "enabled": true,
      "title": "Analytics Dashboard",
      "types": {
        "kpiCards": {
          "enabled": true,
          "columns": 4
        },
        "moduleExecutionChart": {
          "enabled": true,
          "type": "bar",
          "title": "Module Execution Results"
        },
        "performanceChart": {
          "enabled": true,
          "type": "line",
          "title": "System Performance Trends"
        },
        "distributionChart": {
          "enabled": true,
          "type": "doughnut",
          "title": "Issues Distribution"
        }
      }
    },
    "recommendations": {
      "enabled": true,
      "title": "Recommendations",
      "priorityLevels": ["Critical", "High", "Medium", "Low"],
      "maxRecommendations": 10,
      "includeActionable": true
    },
    "logs": {
      "enabled": true,
      "title": "Execution Logs",
      "maxEntries": 100,
      "filterLevels": ["ERROR", "WARNING", "INFO"],
      "expandable": true,
      "downloadable": true
    },
    "appendix": {
      "enabled": true,
      "title": "Technical Details",
      "includeConfiguration": true,
      "includeEnvironment": true,
      "includeModuleVersions": true
    }
  },
  
  "charts": {
    "library": "Chart.js",
    "version": "4.4.0",
    "responsive": true,
    "maintainAspectRatio": false,
    "defaultColors": [
      "#0078d4", "#107c10", "#ffb900", "#d13438", 
      "#6b69d6", "#8764b8", "#00bcf2", "#40e0d0"
    ],
    "animations": {
      "enabled": true,
      "duration": 750,
      "easing": "easeInOutQuart"
    },
    "fonts": {
      "family": "'Segoe UI', sans-serif",
      "size": 12,
      "weight": "normal"
    }
  },
  
  "interactivity": {
    "collapsibleSections": true,
    "searchable": true,
    "sortableTables": true,
    "tooltips": {
      "enabled": true,
      "delay": 500
    },
    "modals": {
      "enabled": true,
      "backdropClose": true
    },
    "filters": {
      "enabled": true,
      "persistent": true
    }
  },
  
  "export": {
    "formats": ["html", "pdf", "json"],
    "includeCss": true,
    "includeJs": true,
    "minify": false,
    "copyToRepository": {
      "enabled": true,
      "filename": "maintenance-report-{timestamp}.html",
      "overwriteLatest": true,
      "keepHistory": 5
    }
  },
  
  "performance": {
    "lazyLoadCharts": true,
    "compressData": true,
    "cacheResults": true,
    "maxFileSize": "10MB",
    "optimizeImages": true
  },
  
  "accessibility": {
    "enableScreenReader": true,
    "highContrast": false,
    "keyboardNavigation": true,
    "altTextForImages": true,
    "colorBlindFriendly": true
  },
  
  "customization": {
    "customCss": {
      "enabled": false,
      "path": ""
    },
    "customJs": {
      "enabled": false,
      "path": ""
    },
    "additionalSections": {
      "enabled": false,
      "sections": []
    }
  },
  
  "validation": {
    "required": [
      "branding.title",
      "theme.colors.primary",
      "sections.order"
    ],
    "defaults": {
      "theme.name": "Microsoft Fluent",
      "layout.maxWidth": "1400px",
      "charts.library": "Chart.js"
    }
  }
}